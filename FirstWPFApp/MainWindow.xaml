<Window x:Class="FirstWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Character" Height="400" Width="800"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True">

    <Grid>
        <Canvas x:Name="GameCanvas" 
                Width="800" 
                Height="400" 
                Background="LightBlue">

            <Image x:Name="RoomBackground" 
                   Width="800" 
                   Height="400" 
                   Stretch="Fill"/>

            <Rectangle x:Name="DoorTransitionArea" 
                      Width="60" 
                      Height="80"
                      Fill="Transparent"
                      Stroke="Red"
                      StrokeThickness="2"
                      Canvas.Left="120"
                      Canvas.Top="20">
                <Rectangle.ToolTip>
                    <ToolTip Content="Выход в следующую комнату"/>
                </Rectangle.ToolTip>
            </Rectangle>

            <Image x:Name="PlayerSprite" 
                   Width="48" 
                   Height="48" 
                   RenderTransformOrigin="0.5,0.5">
            </Image>

        </Canvas>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
            <TextBlock Text="Управление: WASD или стрелки" FontWeight="Bold"/>
            <TextBlock x:Name="DebugText" Text="Загрузка спрайтов..." Foreground="DarkRed"/>
            <TextBlock x:Name="RoomText" Text="Комната: 1" Foreground="Blue" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>